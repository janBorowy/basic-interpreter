struct Person {
    string name,
    string surname
}

struct Book {
    string title,
    string isbn,
    Person author
}

struct Article {
    string headline,
    string shownIn,
    Person author
}

variant Publication {
    Book,
    Article
}

void printPublication(Publication pub) {
    match(pub) {
        Book book -> println("Book with title - " + book.title);
        Article article -> println("Article with headline - " + article.headline);
        default -> println("Unknown publication");
    }
}

int main() {
    Person robert = Person("Robert", "Jordan");
    Person neil = Person("Neil", "Postman");
    Book book = Book("The Wheel Of Time: Eye Of The World", "123", robert);
    Article article = Article("Amusing ourselves to death", "New York Times", neil);
    printPublication(book);
    printPublication(article);
    return 0;
}